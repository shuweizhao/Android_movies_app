<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_fragment"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    >
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:id="@+id/detail_poster"
            app:placeholderImage="@mipmap/kf3"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/detail_title"
        android:textSize="15dp"
        android:gravity="center"
        android:fontFamily="Mono"
        android:layout_marginTop="44dp"
        android:layout_alignTop="@+id/detail_poster"
        android:layout_alignEnd="@+id/overview" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:gravity="center"
        android:textSize="15dp"
        android:id="@+id/vote_average"
        android:layout_marginBottom="69dp"
        android:layout_above="@+id/release_date"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="New Text"
        android:gravity="center"
        android:id="@+id/release_date"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/vote_average" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OverView:"
        android:id="@+id/overview"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detail_poster"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/overview_text"
        android:gravity="center"
        android:layout_alignStart="@+id/overview"
        android:layout_below="@+id/overview"
        android:layout_alignEnd="@+id/overview" />

</RelativeLayout>