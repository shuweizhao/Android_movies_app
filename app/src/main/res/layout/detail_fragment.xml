<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_fragment"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    >
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="200dp"
            android:layout_height="350dp"
            android:id="@+id/detail_poster"
            app:placeholderImage="@mipmap/kf3"
            android:layout_below="@+id/detail_title"
            android:paddingTop="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:text="New Text"
        android:id="@+id/detail_title"
        android:textSize="30sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="6dp"
        android:background="@color/titleColor"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/vote_average"
        android:layout_above="@+id/release_date"
        android:layout_alignStart="@+id/release_date"
        android:layout_marginBottom="115dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="New Text"
        android:gravity="center"
        android:id="@+id/release_date"
        android:layout_marginBottom="54dp"
        android:layout_above="@+id/overview"
        android:layout_alignEnd="@+id/overview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OverView:"
        android:id="@+id/overview"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detail_poster"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="35sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/overview_text"
        android:gravity="center"
        android:layout_alignStart="@+id/overview"
        android:layout_below="@+id/overview"
        android:layout_alignEnd="@+id/overview" />

</RelativeLayout>
</ScrollView>